{% extends "layout.njk" %}

{% block content %}
    <form id="button-enviar" class="card" method="POST" action="/pioneer">

        <section class="details">
            <h3>Inscrição</h3>

            <div class="grid">
                <div class="item">
                    <div>Avatar URL</div>
                    <div>
                        <input type="url" name="avatar_url" placeholder="http://">

                    </div>
                </div>

                <div class="item">
                    <div>Nome</div>
                    <div>
                        <input type="text" name="name">
                    </div>
                </div>

                <div class="item">
                    <div>Idade</div>
                    <div>
                        <input type="date" name="birth">
                    </div>
                </div>

                <div class="item">
                    <div>Sexo</div>
                    <div>
                        <span>
                            <input type="radio" name="gender" value="M">Masculino
                        </span>
                        <span>
                            <input type="radio" name="gender" value="F">Feminino
                        </span>
                    </div>
                </div>

                <div class="item">
                    <div>Tipo Sanguíneo</div>
                    <div>
                        <input type="text" name="type_blood">
                    </div>
                </div>

                <div class="item">
                    <div>Batizado</div>
                    <div>
                        <select name="baptized">
                            <option value="sim">Sim
                            </option>
                            <option value="nao">Não
                            </option>
                        </select>
                    </div>
                </div>

                <div class="item">
                    <div>CPF</div>
                    <div>
                        <input type="text" name="cpf">
                    </div>
                </div>

                <div class="item">
                    <div>Investido em Lenço</div>
                    <div>
                        <select name="invested">
                            <option value="sim">Sim</option>
                            <option value="nao">Não</option>
                        </select>
                    </div>
                </div>

                <div class="item">
                    <div>Veio de qual clube?</div>
                    <div>
                        <input type="text" name="previous_club">
                    </div>
                </div>

                <div class="item">
                    <div>Endereço</div>
                    <div>
                        <input type="text" name="address">
                    </div>
                </div>

                <div class="item">
                    <div>Bairro</div>
                    <div>
                        <input type="text" name="neighborhood">
                    </div>
                </div>

                <div class="item">
                    <div>UF</div>
                    <div>
                        <input type="text" name="uf">
                    </div>
                </div>

                <div class="item">
                    <div>CEP</div>
                    <div>
                        <input type="text" name="cep">
                    </div>
                </div>

                <div class="item">
                    <div>Celular</div>
                    <div>
                        <input type="" name="cell_phone">
                    </div>
                </div>

                <div class="item">
                    <div>Fone Res.</div>
                    <div>
                        <input type="text" name="telephone">
                    </div>
                </div>

                <div class="item">
                    <div>Trab.</div>
                    <div>
                        <input type="text" name="job">
                    </div>
                </div>

                <div class="item">
                    <div>Email</div>
                    <div>
                        <input type="email" name="email">
                    </div>
                </div>

                <div class="item">
                    <div>Passo os finais de semana com?</div>
                    <div>
                        <select name="weekends_parents">
                            <option value="Pais">Pais</option>
                            <option value="Avos">Avós</option>
                            <option value="Outros">Outros</option>
                        </select>
                    </div>
                </div>

            </div>

            <div>
                <h3>Filiação</h3>
                <div class="grid">
                    <div class="item">
                        <div>Pai</div>
                        <div>
                            <input type="text" name="father_name">
                        </div>
                    </div>

                    <div class="item">
                        <div>Batizado</div>
                        <div>
                            <select name="father_baptized">
                                <option value="Sim">Sim</option>
                                <option value="Não">Não</option>
                            </select>
                        </div>
                    </div>

                    <div class="item">
                        <div>Fone Traba.</div>
                        <div>
                            <input type="text" name="father_telephone">
                        </div>
                    </div>

                    <div class="item">
                        <div>Celular</div>
                        <div>
                            <input type="text" name="father_cellphone">
                        </div>
                    </div>

                    <div class="item">
                        <div>Email</div>
                        <div>
                            <input type="email" name="father_email">
                        </div>
                    </div>

                    <div class="item">
                        <div>Profissão</div>
                        <div>
                            <input type="text" name="father_profession">
                        </div>
                    </div>

                    <div class="item">
                        <div>CPF</div>
                        <div>
                            <input type="text" name="father_cpf">
                        </div>
                    </div>

                    <div class="item">
                        <div>Avisar-me em caso de Emergência</div>
                        <div>
                            <select name="father_warn_emergency">
                                <option value="Sim">Sim</option>
                                <option value="Nao">Não</option>
                            </select>
                        </div>
                    </div>

                    <div class="item">
                        <div>Mãe</div>
                        <div>
                            <input type="text" name="mother_name">
                        </div>
                    </div>

                    <div class="item">
                        <div>Batizado</div>
                        <div>
                            <select name="mother_baptized">
                                <option value="Sim">Sim</option>
                                <option value="Nao">Não</option>
                            </select>
                        </div>
                    </div>

                    <div class="item">
                        <div>Fone Traba.</div>
                        <div>
                            <input type="text" name="mother_telephone">
                        </div>
                    </div>

                    <div class="item">
                        <div>Celular</div>
                        <div>
                            <input type="text" name="mother_cellphone">
                        </div>
                    </div>

                    <div class="item">
                        <div>Email</div>
                        <div>
                            <input type="email" name="mother_email">
                        </div>
                    </div>

                    <div class="item">
                        <div>Profissão</div>
                        <div>
                            <input type="text" name="mother_profession">
                        </div>
                    </div>

                    <div class="item">
                        <div>CPF</div>
                        <div>
                            <input type="text" name="mother_cpf">
                        </div>
                    </div>

                    <div class="item">
                        <div>Avisar-me em caso de Emergência</div>
                        <div>
                            <select name="mother_warn_emergency">
                                <option value="Sim">Sim</option>
                                <option value="Nao">Não</option>
                            </select>
                        </div>
                    </div>

                </div>
            </div>

            <div class="button">
                <button type="submit">Enviar</button>
            </div>

        </section>
    </form>

    <script>
        const formEnviar = document.querySelector("#button-enviar")
        formEnviar.addEventListener("submit", function () {
            const confirmation = confirm("Confirma Envio?")
            if (!confirmation) {
                event.preventDefault()
            }
        })
    </script>
{% endblock content %}